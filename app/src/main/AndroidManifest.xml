<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/oig"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.RateMyCulture"
        tools:targetApi="31">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${GOOGLE_MAPS_API_KEY}" />
        <activity
            android:name=".feature.main.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.RateMyCulture.NoActionBar">
        </activity>

        <activity
            android:name=".feature.maps.MapsActivity"
            android:exported="false">
        </activity>

        <activity
            android:name=".feature.profile.ProfileActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.RateMyCulture.NoActionBar" />
        <activity
            android:name=".feature.signup.SignUpActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.RateMyCulture.NoActionBar" />
        <activity
            android:name=".feature.splash.SplashActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.RateMyCulture.NoActionBar" />
        <activity
            android:name=".feature.signin.SignInActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.RateMyCulture.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>